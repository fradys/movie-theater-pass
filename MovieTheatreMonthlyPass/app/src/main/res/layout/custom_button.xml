<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearCustomButton"
    android:layout_width="150dp"
    android:layout_height="155dp"
    android:background="@drawable/rounded_edge_normal"
    android:orientation="vertical"
    android:padding="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"


    >

    <TextView
        android:id="@+id/txtButtonDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="No Data"
        android:textColor="@color/movie_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtButtonWeekDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="THU"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtButtonHourStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="No data"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtButtonHourEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="No data"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/relativeMovieType"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtButtonMovieType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="No type"
            android:textColor="@color/lead_text"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/imgButtonMovieType"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="6dp"
            android:layout_centerInParent="true"
            android:src="@drawable/imax"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>



