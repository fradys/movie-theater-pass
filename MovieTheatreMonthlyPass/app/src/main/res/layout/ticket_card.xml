<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridMovieTicket"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/darker_blank"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/imgMoviePoster"
        android:layout_width="120dp"
        android:layout_height="190dp"
        android:layout_marginEnd="260dp"

        android:layout_marginRight="260dp"

        android:layout_rowSpan="4"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/reservationMovieTitle"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"

        android:layout_marginStart="140dp"
        android:gravity="left"
        android:maxLines="2"
        android:text="@string/noData"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imgMoviePoster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgMoviePoster"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/reservationMovieTheaterName"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:padding="5dp"
        android:text="@string/noData"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMoviePoster"
        app:layout_constraintTop_toBottomOf="@+id/reservationMovieTitle" />


    <TextView
        android:id="@+id/reservationDate"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="9dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"
        android:text="@string/noData"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMoviePoster"
        app:layout_constraintTop_toBottomOf="@+id/reservationMovieTheaterName" />

    <TextView
        android:id="@+id/reservationHour"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:text="@string/noData"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgMoviePoster"
        app:layout_constraintTop_toBottomOf="@+id/reservationDate" />

    <TextView
        android:id="@+id/reservationStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="@string/noData"
        android:textColor="@color/status_green"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMoviePoster" />

    <ImageView
        android:id="@+id/imgReservationQRCode"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservationStatus" />

